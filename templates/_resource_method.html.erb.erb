<div style="padding:30px; padding-top:30px;border-bottom:1px solid #ddd;">
  
  <%
    splitted = @method
    str = @method
    str = "<span style='color:#ff6600; width:200px;margin-right:20px;'>#{str}</span>"
  %>
  <h2><%=str %><%=@url %></h2>
  
  <% if @access %>
    <strong>Access:</strong> <%=@access %><br />
  <% end %>

  <% if @return %>
    <strong>Return:</strong><%
    rep, desc = @return.split("-")
  %>
  <% is_list = rep =~ /\[(.)+\]/ %>
  
  <% if is_list %>
    a list of
    <% end %>
     
  <% if rep.downcase =~ /json/ %>
    <a href="#json" onclick="$('jsonrep').show();">JSON</a>
  <% end %>
  
  <% if rep.downcase =~ /xml/ %>
    <a href="#xml"  onclick="$('xmlrep').show();">XML</a>
  <% end %>
  -
  <%=desc %>
  <br />
  <% end %>

  <% if @variables %>  
    <strong>Parameters:</strong>
    <ul>
      <% @variables.each do |v| %><li><%=v %></li><% end %>
    </ul>
  <% end %>

  <% unless @request.blank? %>
    <strong>Request:</strong>
    <pre class="code"><code><%= @request %></code></pre>
  <% end %>

  <% unless @response.blank? %>  
    <strong>Response:</strong>
    <pre class="code"><code><%= @response %></code></pre>
  <% end %>

  <p><strong>Description:</strong> <%=@content %></p>

</div>
